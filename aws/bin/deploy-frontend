#! /usr/bin/env bash
env=${env:-dev}

if [ "$env" = "qa" ]; then
  echo "QA environment is not yet supported (only dev or prod). Explicitly specify evironment: e.g. env=prod."
  exit 1
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
RESULTS_FILE=$SCRIPT_DIR/build/result.json
mkdir -p "$SCRIPT_DIR/build"
touch $RESULTS_FILE

ansible-playbook "$SCRIPT_DIR/../playbook/deploy-frontend.yml" -e env=$env --ask-vault-pass -vvv > $RESULTS_FILE 2>&1

if [ $? -ne 0 ]; then
  echo "Ansible playbook failed:"
  cat $RESULTS_FILE
  exit 1
fi

cloudfront_id=$(awk -F'"' '/CloudFrontDistributionId/ {print $4}' $RESULTS_FILE | head -1)
echo "cloudfront_distribution_id: $cloudfront_id" > $SCRIPT_DIR/build/cloudfront_output.yml
