#! /usr/bin/env bash

env=${env:-dev}

if [ "$env" = "qa" ]; then
  echo "QA environment is not yet supported (only dev or prod). Explicitly specify evironment: e.g. env=prod."
  exit 1
fi

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CLOUDFRONT_OUTPUT_INFO=$SCRIPT_DIR/build/cloudfront_output.yml
ansible-galaxy collection install -r "$SCRIPT_DIR/../playbook/requirements.yml"
ansible-playbook "$SCRIPT_DIR/../playbook/build-n-upload-frontend.yml" -e env=$env -e @${CLOUDFRONT_OUTPUT_INFO} --ask-vault-pass

sudo rm $CLOUDFRONT_OUTPUT_INFO
